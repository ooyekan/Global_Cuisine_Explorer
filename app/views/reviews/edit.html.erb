<!-- app/views/reviews/edit.html.erb -->

<h1>Edit Review</h1>

<%= form_with(model: @review, local: true) do |form| %>
  <div>
    <%= form.label :reviewer_name, "Name" %>
    <%= form.text_field :reviewer_name %>
  </div>

  <div>
    <%= form.label :content, "Content" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :image, "Attach Image" %>
    <%= form.file_field :image %>
  </div>

  <%= form.submit "Update Review" %>
<% end %>

<%= link_to 'Back to Review', review_path(@review) %>
<%= link_to 'Back to Country', country_path(@review.country) %>
