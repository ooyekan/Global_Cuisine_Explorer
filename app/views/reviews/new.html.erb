<!-- reviews/new.html.erb -->

<%= form_with(model: @review, local: true) do |form| %>
  <%= form.label :reviewer_name %>
  <%= form.text_field :reviewer_name %>

  <%= form.label :content %>
  <%= form.text_area :content %>

  <%= form.label :rating %>
  <%= form.number_field :rating %>

  <%= form.label :image %>
  <%= form.file_field :image %>

  <!-- Add a select dropdown for country_id -->
  <%= form.label :country_id, "Country" %>
  <%= form.select :country_id, options_for_select(Country.all.map { |c| [c.name, c.id] }), { prompt: "Select a country" } %>

  <%= form.submit %>
<% end %>
